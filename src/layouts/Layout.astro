---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<link
			rel="icon"
			type="image/png"
			href="https://www.oscars.org/sites/all/themes/oscarbase/logo.png"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-[990px] m-auto">
		<slot name="aside" />
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: "Poppins", sans-serif;
		background: #fff;
	}
	h1,
	h2 {
		font-family: "Quicksand Variable", sans-serif;
	}
</style>
